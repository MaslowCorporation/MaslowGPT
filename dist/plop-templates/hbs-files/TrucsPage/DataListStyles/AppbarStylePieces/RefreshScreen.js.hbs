import { GetFirestoreCollection } from "src/services/FirestoreCRUD/FirebaseCRUD";
import { MarkScreenAsMounted } from "../../pieces/NavHelpers/MarkScreenAsMounted";
import { MarkScreenAsLoading } from "./MarkScreenAsLoading";

export function RefreshScreen() {
    MarkScreenAsLoading();

    GetFirestoreCollection({
        collectionName: "YourCollectionName",
        onSuccess: async (docs) => {
            MarkScreenAsMounted(docs);

        },
        onError: (e) => {
            MarkScreenAsMounted();
        },
    });
}

  return {
    type: "add",

    path: path.join(`${process.cwd()}/....../.......js`),
    //CloneTemplateFile: "plop-templates/hbs-files/<filename>.js.hbs",
    CloneTemplate: ``,
    skipIfExists: true,
  };
};


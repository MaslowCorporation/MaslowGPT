  return {
    type: "add",

    path: path.join(`${process.cwd()}/....../.......js`),
    //GatherInfoFile: "plop-templates/hbs-files/<filename>.js.hbs",
    GatherInfo: ``,
    skipIfExists: true,
  };
};

